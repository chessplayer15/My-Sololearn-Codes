    document.getElementById("driverStandings").rows[i+1].getElementsByTagName('td').item(0).innerHTML = driverlist[document.getElementById("rank").rows[i+1].getElementsByTagName('td').item(2).innerHTML].name;
    document.getElementById("driverStandings").rows[i+1].style.backgroundColor = driverlist[document.getElementById("rank").rows[i+1].getElementsByTagName('td').item(2).innerHTML].teamcolor;
    document.getElementById("driverStandings").rows[i+1].style.color = driverlist[document.getElementById("rank").rows[i+1].getElementsByTagName('td').item(2).innerHTML].teamfont;
    document.getElementById("driverposition").rows[i+1].style.backgroundColor = "white";
    document.getElementById("driverposition").rows[i+1].style.fontSize = "18px";
    document.getElementById("driverposition").rows[i+1].style.textAlign = "center";
    document.getElementById("driverposition").rows[i+1].style.fontWeight = "bold";
    document.getElementById("driverStandings").rows[i+1].style.fontSize = "18px";
    document.getElementById("driverStandings").rows[i+1].getElementsByTagName('td').item(2).style.fontSize = "16px";
    document.getElementById("driverStandings").rows[i+1].getElementsByTagName('td').item(3).style.fontSize = "10px";
    document.getElementById("driverStandings").rows[i+1].getElementsByTagName('td').item(1).style.textAlign = "right";
    document.getElementById("driverStandings").rows[i+1].getElementsByTagName('td').item(2).style.textAlign = "right";
    document.getElementById("driverStandings").rows[i+1].getElementsByTagName('td').item(3).style.textAlign = "right";
    document.getElementById("driverStandings").rows[i+1].style.fontWeight = "bold";
    } }
    colorize(a); colorize(b); colorize(c); colorize(d); colorize(e); colorize(f); colorize(g); colorize(h); colorize(i);  colorize(z); 
}

function nextRace() {
    if (document.getElementById("lapsD").innerHTML == "Race Over") {if (document.getElementById("racesD").innerHTML != "Season Over") {
    var tableData = document.getElementById('rank').getElementsByTagName('tbody').item(0); 
    var rowData = tableData.getElementsByTagName('tr');
    var a = document.getElementById("card0");
    var b = document.getElementById("card1");
    var c = document.getElementById("card2");
    var d = document.getElementById("card3");
    var e = document.getElementById("card4");
    var f = document.getElementById("card5");
    var g = document.getElementById("card6");
    var h = document.getElementById("card7");
    var i = document.getElementById("card8");
    var z = document.getElementById("tableCard");
    var lapsT = document.getElementById("lapsT");
    var lapsD = document.getElementById("lapsD");
    var PL = document.getElementById("PL");
    var Pass = document.getElementById("Pass");
    var Tires = document.getElementById("Tires");
    document.getElementById("racesD").innerHTML = +racesD.innerHTML+1;
    document.getElementById("racesDT").innerHTML = +racesDT.innerHTML+1;
    a.innerHTML = speed [Math.floor(Math.random() * 5)];
    b.innerHTML = speed [Math.floor(Math.random() * 5)];
    c.innerHTML = speed [Math.floor(Math.random() * 5)];
    d.innerHTML = speed [Math.floor(Math.random() * 5)];
    e.innerHTML = speed [Math.floor(Math.random() * 5)];
    f.innerHTML = speed [Math.floor(Math.random() * 5)];
    g.innerHTML = "N";
    h.innerHTML = "N";
    i.innerHTML = "N";
    z.innerHTML = "N";
    getWeather();
    lapsT.innerHTML = Math.floor(Math.random()*16+20);
    lapsD.innerHTML = "Q";
    PL.innerHTML = +Math.floor(Math.random()*5000+20000)/1000;
    Pass.innerHTML = +Math.floor(Math.random()*1000+250)/1000;
    Tires.innerHTML = 20;
    for (i = 1; i <= rowData.length; i++) {
        document.getElementById("rank").rows[i].getElementsByTagName('td').item(1).innerHTML = 0;
    driverlist[document.getElementById("rank").rows[i].getElementsByTagName('td').item(2).innerHTML].damage = 0;
    driverlist[document.getElementById("rank").rows[i].getElementsByTagName('td').item(2).innerHTML].pit = Math.floor(document.getElementById("lapsT").innerHTML/3)+Math.floor(Math.random()*11-3);
    }
    colorize(a); colorize(b); colorize(c); colorize(d); colorize(e); colorize(f); colorize(g); colorize(h); colorize(i);  colorize(z); 
}   else {alert("The current season is over. If you would like to play again please restart the game.")
} } else {alert("Please finish the current race.");
} }

function driver(name, skill, consis, attack, defend, off, wall, damage, pit, tirewear, tiremanage, points, team, teamcolor, teamfont)
{
    this.name = name;
    this.skill = skill;
    this.consis = consis;
    this.attack = attack;
    this.defend = defend;
    this.off = off;
    this.wall = wall;
    this.damage = damage;
    this.pit = pit;
    this.tirewear = tirewear;
    this.tiremanage = tiremanage;
    this.points = points;
    this.team = team;
    this.teamcolor = teamcolor;
    this.teamfont = teamfont;
}

function colorize(card) {
    switch (card.innerHTML) {
    case "+1":
    card.style.backgroundColor = "#DF0001";
    card.style.color = "white";
    card.style.fontSize = "25px";
    break;
    case "+2":
    card.style.backgroundColor = "#FFD302";
    card.style.color = "white";
    card.style.fontSize = "25px";
    break;
    case "+3":
    card.style.backgroundColor = "#019B4A";
    card.style.color = "white";
    card.style.fontSize = "25px";
    break;
    case "+4":
    card.style.backgroundColor = "#0093E1";
    card.style.color = "white";
    card.style.fontSize = "25px";
    break;
    case "+5":
    card.style.backgroundColor = "#808080";
    card.style.color = "white";
    card.style.fontSize = "25px";
    break;
    case "N":
    card.style.backgroundColor = "white";
    card.style.color = "white";
    break;
    case "Race Over":
    card.style.backgroundColor = "black";
    card.style.color = "white";
    card.style.fontSize = "25px";
    break;
    } ;
}
function playCard(cardID) {
    if (driverlist[201].damage < 5) {
    var a = document.getElementById("card0");
    var b = document.getElementById("card1");
    var c = document.getElementById("card2");
    var d = document.getElementById("card3");
    var e = document.getElementById("card4");
    var f = document.getElementById("card5");
    var g = document.getElementById("card6");
    var h = document.getElementById("card7");
    var i = document.getElementById("card8");
    var z = document.getElementById("tableCard");
    switch (cardID) {
    case "aa":
    putCard(a);
    break;
    case "bb":
    putCard(b);
    break;
    case "cc":
    putCard(c);
    break;
    case "dd":
    putCard(d);
    break;
    case "ee":
    putCard(e);
    break;
    case "ff":
    putCard(f);
    break;
    case "gg":
    putCard(g);
    break;
    case "hh":
    putCard(h);
    break;
    case "ii":
    putCard(i);
    break;
    } } }
function putCard(playedCard) {
    var z = document.getElementById("tableCard") ;
    switch (playedCard.innerHTML) {
    case "+1":
    if (z.innerHTML == "N") {
    z.innerHTML = "+1";
    colorize(z);
    playedCard.innerHTML = "N";
    colorize(playedCard);
    T01.innerHTML = +T01.innerHTML+Math.floor(Math.random()*1000+500)/1000;
    OTT = Math.random()*100;
    if (OTT < 1+weatherN/2)
    {alert("You suffer some tire slip...");
    OTTP()};
    D = Math.random();
    if (D < 0.01)
    {alert("You make contact with the wall...");
    DTP()};
    } 
    else if (z.innerHTML == "+1" || z.innerHTML == "+2" || z.innerHTML == "+3" || z.innerHTML == "+4" || z.innerHTML =="+5") {
    z.innerHTML = "N";
    colorize(z);
    playedCard.innerHTML = "N";
    colorize(playedCard);
    T01.innerHTML = +T01.innerHTML+Math.floor(Math.random()*1000+500)/1000;
    OTT = Math.random()*100;
    if (OTT < 1+weatherN/2)
    {alert("You suffer some tire slip...");
    OTTP()};
    D = Math.random();
    if (D < 0.01)
    {alert("You make contact with the wall...");
    DTP()};
    nextlap();}
    else;
    break;
    case "+2":
    if (z.innerHTML == "N") {
    z.innerHTML = "+2";
    colorize(z);
    playedCard.innerHTML = "N";
    colorize(playedCard);
    T01.innerHTML = +T01.innerHTML+Math.floor(Math.random()*1000+1500)/1000;
    OTT = Math.random()*100;
    if (OTT < 2+weatherN/2)
    {alert("You suffer some tire slip...");
    OTTP()};
    D = Math.random();
    if (D < 0.03)
    {alert("You make contact with the wall...");
    DTP()};}
    else if (z.innerHTML == "+1" || z.innerHTML == "+2") {
    z.innerHTML = "N";
    colorize(z);
    playedCard.innerHTML = "N";
    colorize(playedCard);
    T01.innerHTML = +T01.innerHTML+Math.floor(Math.random()*1000+1500)/1000;
    OTT = Math.random()*100;
    if (OTT < 2+weatherN/2)
    {alert("You suffer some tire slip...");
    OTTP()};
    D = Math.random();
    if (D < 0.03)
    {alert("You make contact with the wall...");
    DTP()};
    nextlap();}
    else;
    break;
    case "+3":
    if (z.innerHTML == "N"){
    z.innerHTML = "+3";
    colorize(z);
    playedCard.innerHTML = "N";
    colorize(playedCard);
    T01.innerHTML = +T01.innerHTML+Math.floor(Math.random()*1000+2500)/1000;
    OTT = Math.random()*100;
    if (OTT < 3+weatherN/2)
    {alert("You suffer some tire slip...");
    OTTP()};
    D = Math.random();
    if (D < 0.05)
    {alert("You make contact with the wall...");
    DTP()};}
    else if (z.innerHTML == "+1") {
    z.innerHTML = "N";
    colorize(z);
    playedCard.innerHTML = "N";
    colorize(playedCard);
    T01.innerHTML = +T01.innerHTML+Math.floor(Math.random()*1000+2500)/1000;
    OTT = Math.random()*100;
    if (OTT < 3+weatherN/2)
    {alert("You suffer some tire slip...");
    OTTP()};
    D = Math.random();
    if (D < 0.05)
    {alert("You make contact with the wall...");
    DTP()};
    nextlap();}
    else;
    break;
    case "+4":
    if (z.innerHTML == "N") {
    z.innerHTML = "+4";
    colorize(z);
    playedCard.innerHTML = "N";
    colorize(playedCard);
    T01.innerHTML = +T01.innerHTML+Math.floor(Math.random()*1000+3500)/1000;
    Tires.innerHTML -= 1;
    OTT = Math.random()*100;
    if (OTT < 4+weatherN/2)
    {alert("You suffer some tire slip...");
    OTTP()};
    D = Math.random();
    if (D < 0.07)
    {alert("You make contact with the wall...");
    DTP()};}
    else if (z.innerHTML == "+1") {
    z.innerHTML = "N";
    colorize(z);
    playedCard.innerHTML = "N";
    colorize(playedCard);
    T01.innerHTML = +T01.innerHTML+Math.floor(Math.random()*1000+3500)/1000;
    Tires.innerHTML -= 1;
    OTT = Math.random()*100;
    if (OTT < 4+weatherN/2)
    {alert("You suffer some tire slip...");
    OTTP()};
    D = Math.random();
    if (D < 0.07)
    {alert("You make contact with the wall...");
    DTP()};
    nextlap();}
    else;
    break;
    case "+5":
    if (z.innerHTML == "N") {
    z.innerHTML = "+5";
    colorize(z);
    playedCard.innerHTML = "N";
    colorize(playedCard);
    T01.innerHTML = +T01.innerHTML+Math.floor(Math.random()*1000+4500)/1000;
    Tires.innerHTML -= 2;
    OTT = Math.random()*100;
    if (OTT < 5+weatherN/2)
    {alert("You suffer some tire slip...");
    OTTP()};
    D = Math.random();
    if (D < 0.09)
    {alert("You make contact with the wall...");
    DTP()};}
    else if (z.innerHTML == "+1") {
    z.innerHTML = "N";
    colorize(z);
    playedCard.innerHTML = "N";
    colorize(playedCard);
    T01.innerHTML = +T01.innerHTML+Math.floor(Math.random()*1000+4500)/1000;
    Tires.innerHTML -= 2;
    OTT = Math.random()*100;
    if (OTT < 5+weatherN/2)
    {alert("You suffer some tire slip...");
    OTTP()};
    D = Math.random();
    if (D < 0.09)
    {alert("You make contact with the wall...");
    DTP()};
    nextlap();}
    else;
    break ;
    case "N":
    break ;
    } };
function drawCard() {
    var a = document.getElementById("card0") ;
    var b = document.getElementById("card1") ;
    var c = document.getElementById("card2") ;
    var d = document.getElementById("card3") ;
    var e = document.getElementById("card4") ;
    var f = document.getElementById("card5") ;
    var g = document.getElementById("card6") ;
    var h = document.getElementById("card7") ;
    var i = document.getElementById("card8") ;
    var z = document.getElementById("tableCard") ;
    if (a.innerHTML == "N") {
    a.innerHTML = speed[Math.floor(Math.random() * 5)] ;
    colorize(a) ;
    } else if (b.innerHTML == "N") {
    b.innerHTML = speed[Math.floor(Math.random() * 5)] ;
    colorize(b) ;
    } else if (c.innerHTML == "N") {
    c.innerHTML = speed[Math.floor(Math.random() * 5)] ;
    colorize(c) ;
    } else if (d.innerHTML == "N") {
    d.innerHTML = speed[Math.floor(Math.random() * 5)] ;
    colorize(d) ;
    } else if (e.innerHTML == "N") {
    e.innerHTML = speed[Math.floor(Math.random() * 5)] ;
    colorize(e) ;
    }  else if (f.innerHTML == "N") {
    f.innerHTML = speed[Math.floor(Math.random() * 5)] ;
    colorize(f) ;
    } else if (g.innerHTML == "N") {
    g.innerHTML = speed[Math.floor(Math.random() * 5)] ;
    colorize(g) ;
    } else if (h.innerHTML == "N") {
    h.innerHTML = speed[Math.floor(Math.random() * 5)] ;
    colorize(h) ;
    } else if (i.innerHTML == "N") {
    i.innerHTML = speed[Math.floor(Math.random() * 5)] ;
    colorize(i) ;
    } ;
}
function nextlap() {
    if (+document.getElementById("lapsD").innerHTML <= document.getElementById("lapsT").innerHTML || document.getElementById("lapsD").innerHTML == "Q"){
    var tableData = document.getElementById('rank').getElementsByTagName('tbody').item(0);
    var rowData = tableData.getElementsByTagName('tr'); 
    var z = document.getElementById("tableCard");
    if (document.getElementById("lapsD").innerHTML == "Q"){
    Qualifying();
    }
    else{
    drawCard();
    if (Math.random() <=0.25){
    drawCard();
    }
    for(var i = 0; i < DC; i++) {
    DN = rowData.item(i).getElementsByTagName('td').item(2).innerHTML;
    if (driverlist[DN].damage <= 4 && rowData.item(i).getElementsByTagName('td').item(0).innerHTML !== document.getElementById("N01").innerHTML){
    rowData.item(i).getElementsByTagName('td').item(1).innerHTML = +rowData.item(i).getElementsByTagName('td').item(1).innerHTML+(Math.floor(Math.random()*(6000-driverlist[DN].consis*1000))-(3000-driverlist[DN].consis*1000/2)+driverlist[DN].skill*1000)/1000};
    }
    z.innerHTML = "N" ;
    colorize (z);
    x = 0;
    while (x < DC) {
    DN = rowData.item(x).getElementsByTagName('td').item(2).innerHTML;
    if (Math.random()*100 <= (driverlist[DN].off+weatherN)) {
    OTT1();}
    x++;}
    x = 0;
    while (x < DC) {
    DN = rowData.item(x).getElementsByTagName('td').item(2).innerHTML;
    if (Math.random()*100 <= driverlist[DN].wall) {
    DT1();}
    x++;}
    x = 0;
    while (x < DC) {
    PS1();
    x++;}
    x = 0;
    ET1();
    sortData ();
    dist();
    for(var i = 0; i < DC; i++) {
    DN = rowData.item(i).getElementsByTagName('td').item(2).innerHTML;
    if (driverlist[DN].damage <= 4){
    rowData.item(i).getElementsByTagName('td').item(1).innerHTML = parseFloat(rowData.item(i).getElementsByTagName('td').item(1).innerHTML).toFixed(3)};
    }
    alert ("End of Lap " + lapsD.innerHTML);
    lapsD.innerHTML = +lapsD.innerHTML+1;
    if (+document.getElementById("lapsD").innerHTML > document.getElementById("lapsT").innerHTML){
    var tableData = document.getElementById('rank').getElementsByTagName('tbody').item(0);
    var rowData = tableData.getElementsByTagName('tr'); 
     alert(document.getElementById("rank").rows[1].cells[0].innerHTML + " of Team " + driverlist[document.getElementById("rank").rows[1].cells[2].innerHTML].team + " won the race.");
    lapsD.innerHTML = "Race Over";
    for (var i = 0; i < rowData.length; i++) {
    if (rowData.item(i).getElementsByTagName('td').item(0).innerHTML == document.getElementById("N01").innerHTML) {
    if (i == 0){
    alert("You finished in first place.")
    } else if (i == 1){
    alert("You finished in second place.")
    } else if (i == 2){
    alert("You finished in third place.")
    } else {
    alert("You finished in " + (+i+1) + "th place"); } } ;
    }
    if (DC > 20) {
        DC = "20";
    }
    DC = DC.toString();
    switch (DC) {
    case "20":
    driverlist[document.getElementById("rank").rows[20].getElementsByTagName('td').item(2).innerHTML].points = +driverlist[document.getElementById("rank").rows[20].getElementsByTagName('td').item(2).innerHTML].points + 1;
    case "19":
    driverlist[document.getElementById("rank").rows[19].getElementsByTagName('td').item(2).innerHTML].points = +driverlist[document.getElementById("rank").rows[19].getElementsByTagName('td').item(2).innerHTML].points + 2;
    case "18":
    driverlist[document.getElementById("rank").rows[18].getElementsByTagName('td').item(2).innerHTML].points = +driverlist[document.getElementById("rank").rows[18].getElementsByTagName('td').item(2).innerHTML].points + 3;
    case "17":
    driverlist[document.getElementById("rank").rows[17].getElementsByTagName('td').item(2).innerHTML].points = +driverlist[document.getElementById("rank").rows[17].getElementsByTagName('td').item(2).innerHTML].points + 4;
    case "16":
    driverlist[document.getElementById("rank").rows[16].getElementsByTagName('td').item(2).innerHTML].points = +driverlist[document.getElementById("rank").rows[16].getElementsByTagName('td').item(2).innerHTML].points + 5;
    case "15":
    driverlist[document.getElementById("rank").rows[15].getElementsByTagName('td').item(2).innerHTML].points = +driverlist[document.getElementById("rank").rows[15].getElementsByTagName('td').item(2).innerHTML].points + 6;
    case "14":
    driverlist[document.getElementById("rank").rows[14].getElementsByTagName('td').item(2).innerHTML].points = +driverlist[document.getElementById("rank").rows[14].getElementsByTagName('td').item(2).innerHTML].points + 7;
    case "13":
    driverlist[document.getElementById("rank").rows[13].getElementsByTagName('td').item(2).innerHTML].points = +driverlist[document.getElementById("rank").rows[13].getElementsByTagName('td').item(2).innerHTML].points + 8;
    case "12":
    driverlist[document.getElementById("rank").rows[12].getElementsByTagName('td').item(2).innerHTML].points = +driverlist[document.getElementById("rank").rows[12].getElementsByTagName('td').item(2).innerHTML].points + 9;
    case "11":
    driverlist[document.getElementById("rank").rows[11].getElementsByTagName('td').item(2).innerHTML].points = +driverlist[document.getElementById("rank").rows[11].getElementsByTagName('td').item(2).innerHTML].points + 10;
    case "10":
    driverlist[document.getElementById("rank").rows[10].getElementsByTagName('td').item(2).innerHTML].points = +driverlist[document.getElementById("rank").rows[10].getElementsByTagName('td').item(2).innerHTML].points + 12;
    case "9":
    driverlist[document.getElementById("rank").rows[9].getElementsByTagName('td').item(2).innerHTML].points = +driverlist[document.getElementById("rank").rows[9].getElementsByTagName('td').item(2).innerHTML].points + 14;
    case "8":
    driverlist[document.getElementById("rank").rows[8].getElementsByTagName('td').item(2).innerHTML].points = +driverlist[document.getElementById("rank").rows[8].getElementsByTagName('td').item(2).innerHTML].points + 16;
    case "7":
    driverlist[document.getElementById("rank").rows[7].getElementsByTagName('td').item(2).innerHTML].points = +driverlist[document.getElementById("rank").rows[7].getElementsByTagName('td').item(2).innerHTML].points + 18;
    case "6":
    driverlist[document.getElementById("rank").rows[6].getElementsByTagName('td').item(2).innerHTML].points = +driverlist[document.getElementById("rank").rows[6].getElementsByTagName('td').item(2).innerHTML].points + 20;
    case "5":
    driverlist[document.getElementById("rank").rows[5].getElementsByTagName('td').item(2).innerHTML].points = +driverlist[document.getElementById("rank").rows[5].getElementsByTagName('td').item(2).innerHTML].points + 25;
    case "4":
    driverlist[document.getElementById("rank").rows[4].getElementsByTagName('td').item(2).innerHTML].points = +driverlist[document.getElementById("rank").rows[4].getElementsByTagName('td').item(2).innerHTML].points + 30;
    case "3":
    driverlist[document.getElementById("rank").rows[3].getElementsByTagName('td').item(2).innerHTML].points = +driverlist[document.getElementById("rank").rows[3].getElementsByTagName('td').item(2).innerHTML].points + 40;
    case "2":
    driverlist[document.getElementById("rank").rows[2].getElementsByTagName('td').item(2).innerHTML].points = +driverlist[document.getElementById("rank").rows[2].getElementsByTagName('td').item(2).innerHTML].points + 60;
    case "1":
    driverlist[document.getElementById("rank").rows[1].getElementsByTagName('td').item(2).innerHTML].points = +driverlist[document.getElementById("rank").rows[1].getElementsByTagName('td').item(2).innerHTML].points + 90;
    } 
    for (var i = 1; i <= rowData.length; i++) {
        document.getElementById("driverStandings").rows[i].getElementsByTagName('td').item(1).innerHTML = +driverlist[document.getElementById("driverStandings").rows[i].getElementsByTagName('td').item(3).innerHTML].points;
    } 
    var tableTData = document.getElementById('teamStandings').getElementsByTagName('tbody').item(0); 
    var rowTData = tableTData.getElementsByTagName('tr'); 
    for (var i = 1; i <= rowTData.length; i++) {
        document.getElementById("teamStandings").rows[i].getElementsByTagName('td').item(1).innerHTML = +driverlist[document.getElementById("teamStandings").rows[i].getElementsByTagName('td').item(3).innerHTML].points+driverlist[+document.getElementById("teamStandings").rows[i].getElementsByTagName('td').item(3).innerHTML+1].points;
    } 
    sortPoints();
    sortTPoints();
    for (var i = 1; i <= rowData.length; i++) {
        document.getElementById("driverStandings").rows[i].getElementsByTagName('td').item(2).innerHTML = +document.getElementById("driverStandings").rows[i].getElementsByTagName('td').item(1).innerHTML-document.getElementById("driverStandings").rows[1].getElementsByTagName('td').item(1).innerHTML;
    }
    for (var i = 1; i <= rowTData.length; i++) {
        document.getElementById("teamStandings").rows[i].getElementsByTagName('td').item(2).innerHTML = +document.getElementById("teamStandings").rows[i].getElementsByTagName('td').item(1).innerHTML-document.getElementById("teamStandings").rows[1].getElementsByTagName('td').item(1).innerHTML;
    }
    DC = rowData.length;
    z.innerHTML = "Race Over";
    colorize(z);
    if (document.getElementById("racesD").innerHTML == document.getElementById("racesT").innerHTML) {
    alert (document.getElementById("driverStandings").rows[1].cells[0].innerHTML + " of Team " + driverlist[document.getElementById("driverStandings").rows[1].cells[3].innerHTML].team + " won the driver championship.");
    alert ("Team " + document.getElementById("teamStandings").rows[1].cells[0].innerHTML + " won the team championship.")
    racesD.innerHTML = "Season Over";
    racesDT.innerHTML = "Season Over";
    } } } } 
    else {alert("The current race is over. Please hit next race in either standings screen to continue with the season.");
} };

function pitStop() {
    if (+document.getElementById("lapsD").innerHTML <= document.getElementById("lapsT").innerHTML) {
    var a = document.getElementById("card0") ;
    var b = document.getElementById("card1") ;
    var c = document.getElementById("card2") ;
    var d = document.getElementById("card3") ;
    var e = document.getElementById("card4") ;
    var f = document.getElementById("card5") ;
    var g = document.getElementById("card6") ;
    var h = document.getElementById("card7") ;
    var i = document.getElementById("card8") ;
    var PL = document.getElementById("PL") ;
    var ST = (Math.floor(Math.random()*2000)+2000)/1000 ;
    alert ("You made a " + (+PL.innerHTML+ST) + " second pit stop.") 
    T01.innerHTML = +T01.innerHTML-PL.innerHTML-ST;
    a.innerHTML = speed [Math.floor(Math.random() * 5)] ;
    b.innerHTML = speed [Math.floor(Math.random() * 5)] ;
    c.innerHTML = speed [Math.floor(Math.random() * 5)] ;
    d.innerHTML = speed [Math.floor(Math.random() * 5)] ;
    e.innerHTML = speed [Math.floor(Math.random() * 5)] ;
    f.innerHTML = "N";
    g.innerHTML = "N";
    h.innerHTML = "N";
    i.innerHTML = "N";
    colorize(a); colorize(b); colorize(c); colorize(d); colorize(e); colorize(f); colorize(g); colorize(h); colorize(i); 
    Tires.innerHTML = 20;
    nextlap();
}   else {alert("The current race is over. Please hit next race in either standings screen to continue with the season.");
} }

function Qualifying(){
    var tableData = document.getElementById('rank').getElementsByTagName('tbody').item(0); 
    var rowData = tableData.getElementsByTagName('tr'); 
    var T01 = document.getElementById("T01");
    for(var i = 0; i < DC; i++) {
    DN = rowData.item(i).getElementsByTagName('td').item(2).innerHTML;
    if (driverlist[DN].damage <= 4 && rowData.item(i).getElementsByTagName('td').item(0).innerHTML !== document.getElementById("N01").innerHTML) {
    rowData.item(i).getElementsByTagName('td').item(1).innerHTML = +rowData.item(i).getElementsByTagName('td').item(1).innerHTML+(Math.floor(Math.random()*(6000-driverlist[DN].consis*1000))-(3000-driverlist[DN].consis*1000/2)+driverlist[DN].skill*1000)/1000};
    }
    sortData();
    for(var i = 0; i < DC; i++) { 
(rowData.item(i).getElementsByTagName('td').item(1).innerHTML = +i*-0.5);
    };
    if (T01.innerHTML == 0){
    alert("You qualified in 1st place.")
    } else if (T01.innerHTML == -0.5){
    alert("You qualified in 2nd place.")
    } else if (T01.innerHTML == -1){
    alert("You qualified in 3rd place.")
    } else if (T01.innerHTML == -25){
    alert("You are starting in pit row.")
    } else {
    alert("You qualified in " + Math.abs(T01.innerHTML*2-1) + "th place.")
    };
    document.getElementById("lapsD").innerHTML = 01;
    var z = document.getElementById("tableCard") ;
    z.innerHTML = "N" ;
    colorize(z);
    drawCard();
    };

function ET1()
//defender takes damage=1%
//pass unsuccessful=54%
//both takes damage=1%
//pass successful=27%
//attacker takes damage=2%
//nothing=15%
    {var tableData = document.getElementById('rank').getElementsByTagName('tbody').item(0); 
    var rowData = tableData.getElementsByTagName('tr'); 
    for(var i = 0; i < DC; i++) { for(var j = i+1; j < DC; j++) { 
    if (Math.abs(parseFloat(rowData.item(i).getElementsByTagName('td').item(1).innerHTML)-(parseFloat(rowData.item(j).getElementsByTagName('td').item(1).innerHTML)-document.getElementById("Pass").innerHTML)) <= 0.250) {
    if (rowData.item(i).getElementsByTagName('td').item(0).innerHTML == document.getElementById("N01").innerHTML || rowData.item(j).getElementsByTagName('td').item(0).innerHTML == document.getElementById("N01").innerHTML){alert(rowData.item(i).getElementsByTagName('td').item(0).innerHTML + " and " + rowData.item(j).getElementsByTagName('td').item(0).innerHTML + " go wheel to wheel.")}; 
    {DNA = rowData.item(j).getElementsByTagName('td').item(2).innerHTML;
    DND = rowData.item(i).getElementsByTagName('td').item(2).innerHTML;
    ET = Math.random()*100-driverlist[DNA].attack+driverlist[DND].defend;
    if (ET < 1) {
    (alert(rowData.item(i).getElementsByTagName('td').item(0).innerHTML + " and " + rowData.item(j).getElementsByTagName('td').item(0).innerHTML + " go wheel to wheel and make contact with each other..."));
    if (rowData.item(i).getElementsByTagName('td').item(0).innerHTML == document.getElementById("N01").innerHTML){
    DTP(); 
    x = j;
    DT1();
    } else if (rowData.item(j).getElementsByTagName('td').item(0).innerHTML == document.getElementById("N01").innerHTML){
    x = i;
    DT1(); 
    DTP();
    } else {
    x = i;
    DT1(); 
    x = j;
    DT1();
    } }
    else if(ET < 2) {
    (alert(rowData.item(i).getElementsByTagName('td').item(0).innerHTML + " forces " + rowData.item(j).getElementsByTagName('td').item(0).innerHTML + " off track."));
    if (rowData.item(j).getElementsByTagName('td').item(0).innerHTML == document.getElementById("N01").innerHTML) {
    OTTP();
    } else {
    x = j;
    OTT1(); 
    } }
    else if(ET < 3) {
    (alert(rowData.item(i).getElementsByTagName('td').item(0).innerHTML + " and " + rowData.item(j).getElementsByTagName('td').item(0).innerHTML + " go wheel to wheel and make contact with each other..."));
    if (rowData.item(i).getElementsByTagName('td').item(0).innerHTML == document.getElementById("N01").innerHTML) {
    DTP();
    } else {
    x = i;
    DT1(); 
    } }
    else if(ET < 4) {
    (alert(rowData.item(i).getElementsByTagName('td').item(0).innerHTML + " and " + rowData.item(j).getElementsByTagName('td').item(0).innerHTML + " go wheel to wheel and make contact with each other..."));
    if (rowData.item(j).getElementsByTagName('td').item(0).innerHTML == document.getElementById("N01").innerHTML) {
    DTP();
    } else {
    x = j;
    DT1(); 
    } }
    else if(ET < 31) {
    TL = Math.floor(Math.random()*5+6);
   if (rowData.item(i).getElementsByTagName('td').item(0).innerHTML == document.getElementById("N01").innerHTML || rowData.item(j).getElementsByTagName('td').item(0).innerHTML == document.getElementById("N01").innerHTML){(alert(rowData.item(j).getElementsByTagName('td').item(0).innerHTML + " gets by " + rowData.item(i).getElementsByTagName('td').item(0).innerHTML + "."))};
(rowData.item(i).getElementsByTagName('td').item(1).innerHTML =+parseFloat(rowData.item(j).getElementsByTagName('td').item(1).innerHTML)-0.001);
   }
    else if(ET < 46) {
    if (rowData.item(i).getElementsByTagName('td').item(0).innerHTML == document.getElementById("N01").innerHTML || rowData.item(j).getElementsByTagName('td').item(0).innerHTML == document.getElementById("N01").innerHTML)    
    {(alert("and continue to fight over there next lap."))};
    rowData.item(i).getElementsByTagName('td').item(1).innerHTML = +parseFloat(rowData.item(j).getElementsByTagName('td').item(1).innerHTML);
    }
    else {
    if (rowData.item(i).getElementsByTagName('td').item(0).innerHTML == document.getElementById("N01").innerHTML || rowData.item(j).getElementsByTagName('td').item(0).innerHTML == document.getElementById("N01").innerHTML)
        {(alert(rowData.item(i).getElementsByTagName('td').item(0).innerHTML + " successfully blocks " + rowData.item(j).getElementsByTagName('td').item(0).innerHTML + "."))};
(rowData.item(j).getElementsByTagName('td').item(1).innerHTML = +parseFloat(rowData.item(i).getElementsByTagName('td').item(1).innerHTML)-0.001);
   } } } } } };

function dist() {
    var tableData = document.getElementById('rank').getElementsByTagName('tbody').item(0); 
    var rowData = tableData.getElementsByTagName('tr');
    for (var i = 0; i < DC-1; i++) { 
    if (parseFloat(rowData.item(i).getElementsByTagName('td').item(1).innerHTML)-parseFloat(rowData.item(i+1).getElementsByTagName('td').item(1).innerHTML) <= 0.200 && rowData.item(i).getElementsByTagName('td').item(1).innerHTML !== rowData.item(i+1).getElementsByTagName('td').item(1).innerHTML) {
    (rowData.item(i+1).getElementsByTagName('td').item(1).innerHTML = +parseFloat(rowData.item(i).getElementsByTagName('td').item(1).innerHTML)-(Math.floor(Math.random()*100)+200)/1000);
    } };
    for(var i = DC-1; i > -1; i--) { 
rowData.item(i).getElementsByTagName('td').item(1).innerHTML = +parseFloat(rowData.item(i).getElementsByTagName('td').item(1).innerHTML)-(rowData.item(0).getElementsByTagName('td').item(1).innerHTML)
    } };

//0=9%
//1=45%
//2=20%
//1+draw again=10%
//1+pit now=2%
//1-5=10%
//6-10=2%
//crash=1%
//crash SC=1%
function DTP()
    {var tableData = document.getElementById('rank').getElementsByTagName('tbody').item(0);
    var rowData = tableData.getElementsByTagName('tr'); 
    DT = Math.random();
    if (DT <0.01) {
    SC = Math.floor(Math.random()*3+1);
    (alert("and you have crashed out of the race. Safety car comes out for " + SC + " laps."));
    document.getElementById("T01").innerHTML= ("Out");
    for (var i = 0; i < rowData.length; i++) {
    if (rowData.item(i).getElementsByTagName('td').item(2).innerHTML == 201) {
    tableData.insertBefore(rowData.item(i),rowData.item(DC));} }
    DC -= 1;
    for(var i = 0; i < DC; i++) { 
    if (driverlist[rowData.item(i).getElementsByTagName('td').item(2).innerHTML].pit <= +document.getElementById("lapsD").innerHTML+SC) {
    x = i;
    PS2();
    } }
    for(var i = 0; i < DC; i++) { 
    driverlist[rowData.item(i).getElementsByTagName('td').item(2).innerHTML].pit = driverlist[rowData.item(i).getElementsByTagName('td').item(2).innerHTML].pit + SC;
        
    }
    sortData();
    x = 999;
    driverlist[201].damage = 99;
    document.getElementById("lapsD").innerHTML = +lapsD.innerHTML+SC;
    DC -= 1;
    for(var i = 0; i < DC; i++) { 
(rowData.item(i).getElementsByTagName('td').item(1).innerHTML = +i*-0.250);
    }
    while(+document.getElementById("lapsD").innerHTML  <= +document.getElementById("lapsT").innerHTML)
    {nextlap()};
    }
    else if(DT <0.02) {
    (alert("and you crash out of the race."));
    (driverlist[201].damage = 99);
    document.getElementById("T01").innerHTML= ("Out");
    for (var i = 0; i < rowData.length; i++) {
    if (rowData.item(i).getElementsByTagName('td').item(2).innerHTML == 201) {
    tableData.insertBefore(rowData.item(i),rowData.item(DC));} }
    DC -= 1;
 while(+document.getElementById("lapsD").innerHTML  <= +document.getElementById("lapsT").innerHTML)
    {nextlap()};
    }
    else if(DT <0.04) {
    (alert("you take 1 damage and suffer a puncture forcing you to pit."));
    (driverlist[201].damage = +driverlist[201].damage+1)
    pitStop();
    }
    else if(DT <0.14) {
    (alert("and you take 1 damage..."));
    (driverlist[201].damage = +driverlist[201].damage+1)
    DTP();
    }
    else if(DT <0.16) {
    TL = Math.floor(Math.random()*5+6);
    (alert("and you lose " + TL + " seconds."));
(document.getElementById("T01").innerHTML = +T01.innerHTML-TL);
    }
    else if(DT <0.26) {
    TL = Math.floor(Math.random()*5+1);
    (alert("and you lose " + TL + " seconds."));
(document.getElementById("T01").innerHTML = +T01.innerHTML-TL);
    }
    else if(DT <0.46) {
    (alert("and you take 2 damage."));
    (driverlist[201].damage = +driverlist[201].damage+2);
    }
    else if(DT <0.91) {
    (alert("and you take 1 damage."));
    (driverlist[201].damage = +driverlist[201].damage+1);
    }
    else {
    (alert("and you just narrowly avoid damage."))
    };
    if (driverlist[201].damage >= 5 && driverlist[201].damage < 99) {(alert (document.getElementById("N01").innerHTML + " has retired from the race."));
    document.getElementById("T01").innerHTML= ("Out");
    for (var i = 0; i < rowData.length; i++) {
    if (rowData.item(i).getElementsByTagName('td').item(2).innerHTML == 201) {
    tableData.insertBefore(rowData.item(i),rowData.item(DC));} }
    DC -= 1;
 while(+document.getElementById("lapsD").innerHTML  <= +document.getElementById("lapsT").innerHTML)
    {nextlap()}};
    };
function DT1()
    {var tableData = document.getElementById('rank').getElementsByTagName('tbody').item(0);
    var rowData = tableData.getElementsByTagName('tr'); 
    DN = rowData.item(x).getElementsByTagName('td').item(2).innerHTML;
    {DT = Math.random(); 
    {if (DT <0.01) {
    SC = Math.floor(Math.random()*3+1);
    (alert(driverlist[DN].name + " makes contact with the wall and has crashed out of the race. Safety car comes out for " + SC + " laps."));
    driverlist[DN].damage = 99;
    rowData.item(x).getElementsByTagName('td').item(1).innerHTML = "Out";
    tableData.insertBefore(rowData.item(x),rowData.item(DC));
    DC -= 1;
    for(var i = 0; i < DC; i++) { 
    if (driverlist[rowData.item(i).getElementsByTagName('td').item(2).innerHTML].pit <= +document.getElementById("lapsD").innerHTML+SC) {
    x = i;
    PS2();
    } }
    var pS = confirm("Do you want to make a pit stop?");
if (pS == true) {
    pitStop();
}
else {
    
}
    for(var i = 0; i < DC; i++) { 
    driverlist[rowData.item(i).getElementsByTagName('td').item(2).innerHTML].pit = driverlist[rowData.item(i).getElementsByTagName('td').item(2).innerHTML].pit + SC;
        
    }
    document.getElementById("lapsD").innerHTML = +lapsD.innerHTML+SC;
    sortData();
    for(var i = 0; i < DC; i++) { 
(rowData.item(i).getElementsByTagName('td').item(1).innerHTML = +i*-0.250);
    } 
    x = 999;
    }
    else if(DT <0.02) {
    alert(driverlist[DN].name + " makes contact with the wall and crashes out of the race.");
    (driverlist[DN].damage = 99);
    rowData.item(x).getElementsByTagName('td').item(1).innerHTML = "Out";
    tableData.insertBefore(rowData.item(x),rowData.item(DC));
    DC -= 1;
    x--;
    DN = rowData.item(x).getElementsByTagName('td').item(2).innerHTML;
}
    else if(DT <0.04) {
    alert(driverlist[DN].name + " makes contact with the wall and takes 1 damage. He has also suffered a puncture and has to pit.");
    driverlist[DN].damage = driverlist[DN].damage + 1;
    PS2();
    }
    else if(DT <0.14) {
    driverlist[DN].damage = driverlist[DN].damage + 1;
    DT1();
    }
    else if(DT <0.16) {
    TL = Math.floor(Math.random()*5+6);
    alert(driverlist[DN].name + " makes contact with the wall and lost " + TL + " seconds.");
(rowData.item(x).getElementsByTagName('td').item(1).innerHTML = +parseInt(rowData.item(x).getElementsByTagName('td').item(1).innerHTML)-TL);
    }
    else if(DT <0.26) {
    TL = Math.floor(Math.random()*5+1);
    alert(driverlist[DN].name + " makes contact with the wall and lost " + TL + " seconds.");
(rowData.item(x).getElementsByTagName('td').item(1).innerHTML = +parseInt(rowData.item(x).getElementsByTagName('td').item(1).innerHTML)-TL);
    }
    else if(DT <0.46) {
    driverlist[DN].damage = driverlist[DN].damage + 2;
    }
    else if(DT <0.91) {
    driverlist[DN].damage = driverlist[DN].damage + 1;
   }
    else {
    
    } if (driverlist[DN].damage >= 5 && driverlist[DN].damage < 99) {
    (alert (driverlist[DN].name + " has retired from the race."));
   rowData.item(x).getElementsByTagName('td').item(1).innerHTML = "Out";
    tableData.insertBefore(rowData.item(x),rowData.item(DC));
    DC -= 1
    } } } };

//0=50%
//1-5=30%
//6-10=15%
//10+DT=5%
function OTTP()
    {OTT = Math.random();
    if (OTT <0.05) {
    alert("and has gone off track lost 10 seconds and...");
document.getElementById("T01").innerHTML = +T01.innerHTML-10;
    DTP();}
    else if(OTT <0.20) {
    TL = Math.floor(Math.random()*5+6);
    (alert("and lost " + TL + " seconds."));
(document.getElementById("T01").innerHTML = +T01.innerHTML-TL)
    }
    else if(OTT <0.50) {
    TL = Math.floor(Math.random()*5+1);
    (alert("and lost " + TL + " seconds."));
(document.getElementById("T01").innerHTML = +T01.innerHTML-TL)
    }
    else
    alert("but recovered.");
    };
function OTT1()
    {var tableData = document.getElementById('rank').getElementsByTagName('tbody').item(0);
    var rowData = tableData.getElementsByTagName('tr'); 
    DN = rowData.item(x).getElementsByTagName('td').item(2).innerHTML; 
    {OTT = Math.random(); if(rowData.item(x).getElementsByTagName('td').item(0).innerHTML !== document.getElementById("N01").innerHTML){
    if (OTT <0.05) {
    alert(driverlist[DN].name + " has some tire slip and has gone off track lost 10 seconds.");
rowData.item(x).getElementsByTagName('td').item(1).innerHTML =+parseFloat(rowData.item(x).getElementsByTagName('td').item(1).innerHTML)-10;
    DT1();}
    else if(OTT <0.20) {
    TL = Math.floor(Math.random()*5+6);
   (alert(driverlist[DN].name + " has some tire slip and lost " + TL + " seconds."));
(rowData.item(x).getElementsByTagName('td').item(1).innerHTML =+parseFloat(rowData.item(x).getElementsByTagName('td').item(1).innerHTML)-TL);
    }
    else if(OTT <0.50) {
    TL = Math.floor(Math.random()*5+1);
   (alert(driverlist[DN].name + " has some tire slip and lost " + TL + " seconds."));
(rowData.item(x).getElementsByTagName('td').item(1).innerHTML =+parseFloat(rowData.item(x).getElementsByTagName('td').item(1).innerHTML)-TL);
    }
    else {
    
    } } } };
       
function PS1()
    {var tableData = document.getElementById('rank').getElementsByTagName('tbody').item(0); 
    var rowData = tableData.getElementsByTagName('tr');
    var DN = rowData.item(x).getElementsByTagName('td').item(2).innerHTML; 
    {
    if (rowData.item(x).getElementsByTagName('td').item(0).innerHTML != document.getElementById("N01").innerHTML) {
    if (driverlist[DN].pit == +document.getElementById("lapsD").innerHTML) {
    rowData.item(x).getElementsByTagName('td').item(1).innerHTML = +parseFloat(rowData.item(x).getElementsByTagName('td').item(1).innerHTML)-document.getElementById("PL").innerHTML-(Math.floor(Math.random()*3000)+2000)/1000;
    driverlist[DN].pit = +lapsD.innerHTML+30;
   (alert(rowData.item(x).getElementsByTagName('td').item(0).innerHTML + " makes a pit stop."))}}}};
function PS2()
    {var tableData = document.getElementById('rank').getElementsByTagName('tbody').item(0); 
var rowData = tableData.getElementsByTagName('tr'); 
    DN = rowData.item(x).getElementsByTagName('td').item(2).innerHTML; 
    {
    rowData.item(x).getElementsByTagName('td').item(1).innerHTML = +parseFloat(rowData.item(x).getElementsByTagName('td').item(1).innerHTML)-document.getElementById("PL").innerHTML-(Math.floor(Math.random()*3000)+2000)/1000;
    driverlist[DN].pit = +lapsD.innerHTML+30;
   (alert(rowData.item(x).getElementsByTagName('td').item(0).innerHTML + " makes a pit stop."))}};
   
function getWeather() {
    weatherN = Math.random();
    if (weatherN <= 0.05) {
    weatherN = 10;
    document.getElementById("Weather").innerHTML = "Pouring Rain";
    } else if (weatherN <= 0.12) {
    weatherN = 5;
    document.getElementById("Weather").innerHTML = "Moderate Rain";
    } else if (weatherN <= 0.25) {
    weatherN = 2;
    document.getElementById("Weather").innerHTML = "Light Rain";
    } else if (weatherN <= 0.50) {
    weatherN = 0;
    document.getElementById("Weather").innerHTML = "Cloudy";
    } else {
    weatherN = 0;
    document.getElementById("Weather").innerHTML = "Sunny";
    }
}
   
function sortData() {
    var tableData = document.getElementById('rank').getElementsByTagName('tbody').item(0); 
    var rowData = tableData.getElementsByTagName('tr'); 
    for (var i = 0; i < DC - 1; i++) {
    for (var j = 0; j < DC - (i+1); j++) { 
    if (parseFloat(rowData.item(j).getElementsByTagName('td').item(1).innerHTML) < parseFloat(rowData.item(j+1).getElementsByTagName('td').item(1).innerHTML)) {
    tableData.insertBefore(rowData.item(j+1),rowData.item(j)); 
    } } } };
function sortPoints () {
    var tableData = document.getElementById('driverStandings').getElementsByTagName('tbody').item(0); 
    var rowData = tableData.getElementsByTagName('tr'); 
    for (var i = 0; i < rowData.length - 1; i++) {
    for (var j = 0; j < rowData.length - (i+1); j++) { 
    if (parseFloat(rowData.item(j).getElementsByTagName('td').item(1).innerHTML) < parseFloat(rowData.item(j+1).getElementsByTagName('td').item(1).innerHTML)) {
    tableData.insertBefore(rowData.item(j+1),rowData.item(j)); 
    } } } };
function sortTPoints () {
    var tableTData = document.getElementById('teamStandings').getElementsByTagName('tbody').item(0); 
    var rowTData = tableTData.getElementsByTagName('tr'); 
    for (var i = 0; i < rowTData.length - 1; i++) {
    for (var j = 0; j < rowTData.length - (i+1); j++) { 
    if (parseFloat(rowTData.item(j).getElementsByTagName('td').item(1).innerHTML) < parseFloat(rowTData.item(j+1).getElementsByTagName('td').item(1).innerHTML)) {
    tableTData.insertBefore(rowTData.item(j+1),rowTData.item(j)); 
    } } } };
    
    // show the given page, hide the rest 
function show(elementID) {// try to find the requested page and alert if it's not found 
var ele = document.getElementById(elementID); 
if (!ele) {alert("no such element"); return;} // get all pages, loop through them and hide them 
var pages = document.getElementsByClassName('page'); 
for(var i = 0; i < pages.length; i++) { pages[i].style.display = 'none'; } // then show the requested page 
ele.style.display = 'block'
}

function toggleRules() {
    alert("Welcome to my racing game!  The objective of the game is to finish in first.  To start there is qualifying to determine starting positions.  The speeds of the cards are as follows Red (+0.5-+1.5), Yellow (+1.5-+2.5), Green (+2.5-+3.5), Blue (+3.5-+4.5), and Gray (+4.5-+5.5).  You can play anything on a Red and a Red on anything.  Also you can play a Yellow on a Yellow.  Your turn ends when you pay 2 cards or click end turn.  At the end of every turn you will draw one or two cards.  Clicking on Pit Stop will replace your hand and give you 6 new cards but will cost you about PL+3 or " + (+document.getElementById("PL").innerHTML+3) + " seconds and it also ends the lap.  Maximum hand size is 9 cards.  There is also a difficulty to passing other drivers.  If cars get within 0.250 seconds of each other they will fight for position.  If cars are between 0.250 and " + +document.getElementById("Pass").innerHTML + ", they will go to the Pass distance.  Cars will randomly take damage and go off track (the faster you go the more likely you are to go off track and/or take damage).  Damage has no effect until you aquire 5, at which point you retire from the race.  Going off track might cost you time and sometimes you might take damage.  I hope you have fun with the game I made!");
}
</script>
</html>
